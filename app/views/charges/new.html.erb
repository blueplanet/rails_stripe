<h2>支払い</h2>

<p>
  <h3>一回支払い</h3>
  <%= form_for @charge do |f| %>
    <%= f.hidden_field :amount %>
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Settings.stripe.public_key %>"
              data-email="<%= current_user.email %>"
              data-name="〇〇ECサイト"
              data-description="一回だけの支払い"
              data-amount="<%= @charge.amount %>"
              data-locale="ja"
              data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
              data-label="一回払い">
    </script>
  <% end %>
</p>

<p>
  <h3>プラン選択</h3>
  <%= form_for current_user do |f| %>
  <div class="row">
    <% Plan.all.each do |plan| %>
    <div class="col-md-6">
      <div class="panel panel-info">
        <div class="panel-heading"><%= plan.name %></div>
        <div class="panel-body">
          <h4 class='text-center'>
            <label>
              <%= f.radio_button :plan_id, value: plan.id %>
              <%= number_with_delimiter plan.amount %> 円 / <%= plan.interval %>
            </label>
          </h4>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= f.submit '保存する', class: 'btn btn-primary btn-lg btn-block' %>
    </div>
  </div>
  <% end %>

</p>
